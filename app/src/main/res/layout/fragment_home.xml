<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:layout_marginBottom="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_background"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="10th Cross, Wilson Garden"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/location_spinner_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_background"/>
        </LinearLayout>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Top Services"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FF5E15"
                android:layout_margin="10dp"
                android:padding="6dp"
                android:fontFamily="times"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardElevation="6dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/search_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/iconeletrician"
                            android:layout_marginStart="40dp"
                           />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Electrician"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:fontFamily="times"
                            android:layout_marginStart="33dp"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/iconplumber"
                            android:layout_marginStart="60dp"/>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Plumber"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="times"
                            android:layout_marginStart="50dp"
                            android:paddingBottom="8dp"/>
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icondeepcleaning"
                            android:layout_marginStart="20dp"/>
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Deep Cleaning"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="times"
                            android:layout_marginStart="20dp"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/iconhousepainting"
                            android:layout_marginStart="40dp"/>
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="House Painting"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="times"
                            android:layout_marginStart="6dp"
                            android:paddingBottom="8dp"/>
                    </LinearLayout>
                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/iconacservices" />
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="AC Services"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="times"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>
                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Browse by Category"
                    android:textSize="20sp"
                    android:textColor="#FF5E15"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:padding="6dp"/>



            </LinearLayout>



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                android:layout_margin="10dp"
                android:background="@drawable/search_background">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/others"
                            android:layout_marginStart="20dp"/>
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Others"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="times"
                            android:layout_marginStart="20dp"
                            android:padding="6dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            android:src="@drawable/homemaintaince"
                            android:layout_marginStart="40dp"/>
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Home Maintaince"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="times"
                            android:layout_marginStart="38dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            android:src="@drawable/homeimprovements"
                            android:layout_marginStart="40dp"/>
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Home Improvements"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="times"
                            android:layout_marginStart="38dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            android:src="@drawable/applianceandgadgets"
                            android:layout_marginStart="40dp"/>
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Appliance And Gadgets"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="times"
                            android:layout_marginStart="38dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            android:src="@drawable/events"
                            android:layout_marginStart="40dp"/>
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Events"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="times"
                            android:layout_marginStart="38dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            android:src="@drawable/luxury"
                            android:layout_marginStart="40dp"/>
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Luxury"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="times"
                            android:layout_marginStart="38dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            android:src="@drawable/personal"
                            android:layout_marginStart="40dp"/>
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Personal"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="times"
                            android:layout_marginStart="38dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            android:src="@drawable/health"
                            android:layout_marginStart="40dp"/>
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Health And Wellness"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="times"
                            android:layout_marginStart="38dp"/>
                    </LinearLayout>






                </LinearLayout>

            </androidx.cardview.widget.CardView>
            </HorizontalScrollView>





        </LinearLayout>



    </ScrollView>

</LinearLayout>